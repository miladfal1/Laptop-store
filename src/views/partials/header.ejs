<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="Content-Language" content="fa" />
  <title>Menu</title>
  <link rel="stylesheet" href="/css/main.css" />
  <link rel="stylesheet" href="/css/order.css" />
  <link rel="stylesheet" href="/css/profile.css" />
  <link rel="stylesheet" href="/css/login.css" />
  <link rel="stylesheet" href="/css/responsive.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
</head>

<body>
  <main>
    <div class="head-container">
      <a class="logo" href="http://localhost:3000">
        <img src="/uploads/Logo.png" alt="" />
      </a>

      <a href="http://localhost:3000/order" class="cart-icon-container">
        <i class="fas fa-shopping-cart"></i>
        <span id="cart-count">0</span>
      </a>
      <div class="login-container">
        <% if (user) { %>
        <a href="/profile" class="login-header">پروفایل من</a>
        <a href="/logout" class="login-header">خروج</a>
        <% } else { %>
        <a href="/login" class="login-header">ورود</a>
        <a href="/signup" class="signup-header">ثبت نام</a>
        <% } %>
      </div>
      <i class="fas fa-bars menu-icon" id="menu-icon"></i>
    </div>

    <div class="categories-container">
      <ul class="categories-list">
        <% categories.forEach(function(category) { %>
        <li class="category-item" data-category-name="<%= category.name %>">
          <a class="menu-link" href="/item/<%= category.name %>"> <%= category.name %> </a>
        </li>
        <% }); %>
      </ul>
    </div>

    <div class="responsive-menu" id="responsiveMenu">
      <div class="res-login-container">
        <% if (user) { %>
        <a href="/profile" class="login-header">پروفایل من</a>
        <a href="/logout" class="login-header">خروج</a>
        <% } else { %>
        <a href="/login" class="login-header">ورود</a>
        <a href="/signup" class="signup-header">ثبت نام</a>
        <% } %>
      </div>
      <div class="res-categories-container">
        <ul class="res-categories-list">
          <% categories.forEach(function(category) { %>
          <li class="category-item" data-category-name="<%= category.name %>">
            <a class="menu-link" href="/item/<%= category.name %>"> <%= category.farsiName %> </a>
          </li>
          <% }); %>
        </ul>
      </div>
    </div>
